<section>
  <div class="container mt-5">
    <div class="row">
      {{#each products}}
      <div class="col-md-3">
        <div class="card" style="width: 12rem; height: 25rem;">
          <img style="height: 20rem;" class="card-img-top" src="/product-images/{{this._id}}.jpg" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title text-center">{{this.Name}}</h5>
            <p class="card-text">{{this.Description}}</p>
            <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>

